<Window x:Class="AudioSelector_Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioSelector_Core"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="Audio Selector" Height="120" Width="200" WindowStyle="ToolWindow" Icon="/icon.ico">
    
    <Grid>
        <tb:TaskbarIcon x:Name="myNotifyIcon" Visibility="Visible" ToolTipText="Audio Selector" IconSource="icon.ico"  />
        <StackPanel Margin="5,5,5,5" VerticalAlignment="Stretch">
            <Button Content="Config neu laden" Margin="0,0,0,5" Click="Btn_ReloadConfig"/>
            <Button Content="Minimieren" Margin="0,0,0,5" Click="Btn_HideWnd_Click"/>
            <Button Content="Beenden" Margin="0,0,0,0" Click="Btn_Shutdown_Click"/>
        </StackPanel>
    </Grid>
</Window>
